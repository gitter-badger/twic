@keyframes jiggle
	0%
		transform rotate(-1deg)
	50%
		transform rotate(1deg)

.account
	display inline-block
	padding 1.5em 1.75em
	cursor pointer
	opacity .8
	transition opacity 0.15s ease-in-out
	border 1px solid transparent
	border-radius .5em
	will-change opacity

	&:hover
		opacity 1
		text-decoration none

	.nick
		display block
		color black
		margin-top .5em

	&.account-remove
		animation jiggle .2s infinite

		&:before
			background-color black
			border 1px solid white
			border-radius 12px
			box-shadow 0 0 3px #333
			content "x"
			color white
			display inline-block
			font-size 11px
			position absolute
			text-align center
			width 16px
			height 16px
			left 14px
			top 12px

	&.account-removing
		border-color red
		opacity 1

		.nick
			text-decoration line-through

	&.account-need-auth
		opacity .25
