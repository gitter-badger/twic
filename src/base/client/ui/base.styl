body
	margin 0
	padding 0
	background-color #f7f7f7
	color black
	line-height 1.3
	width 390px
	user-select none
	font-size 9pt

textarea
	overflow hidden

a
	color #556188
	text-decoration none
	cursor pointer

	&:hover
		text-decoration underline

	&:focus
		outline none

ol, ul
	list-style none
	padding 0
	margin 0

h1
	font-size 12pt

h2
	font-size 10pt

.clearer
	clear both
